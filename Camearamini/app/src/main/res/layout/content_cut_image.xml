<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leminhbang.camearamini.CutImageActivity"
    tools:showIn="@layout/activity_cut_image">

    <LinearLayout
        android:id="@+id/linearlayout_main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_main_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="50dp"/>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/btmnBottom_menu_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemBackground="@android:drawable/screen_background_dark_transparent"
            app:itemIconTint="@drawable/nav_item_color"
            app:itemTextColor="@drawable/nav_item_color"
            app:menu="@menu/menu_bottom"/>

    </LinearLayout>
    <ImageButton
        android:id="@+id/imbPoint_1"
        android:src="@drawable/dot_point"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:layout_width="16dp"
        android:layout_height="16dp" />
    <ImageButton
        android:id="@+id/imbPoint_2"
        android:src="@drawable/dot_point"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:layout_width="16dp"
        android:layout_height="16dp" />
    <ImageButton
        android:id="@+id/imbPoint_3"
        android:src="@drawable/dot_point"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:layout_width="16dp"
        android:layout_height="16dp" />
    <ImageButton
        android:id="@+id/imbPoint_4"
        android:src="@drawable/dot_point"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:layout_width="16dp"
        android:layout_height="16dp" />
</RelativeLayout>
