<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leminhbang.camearamini.ChangeShadeActivity"
    tools:showIn="@layout/activity_change_shade">
    <LinearLayout
        android:id="@+id/linearlayout_main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_main_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/image_main"
            android:visibility="visible"
            android:layout_marginTop="50dp"/>
        <Gallery
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/gallery_change_shade"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/btmnBottom_menu_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemBackground="@android:drawable/screen_background_dark_transparent"
            app:itemIconTint="@drawable/nav_item_color"
            app:itemTextColor="@drawable/nav_item_color"
            app:menu="@menu/menu_bottom"/>

    </LinearLayout>

</RelativeLayout>
